@model EmployeeManagerMVC.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Employee Matching Skillset";
}

<div class="container">
    <h2>Search Employees by Skillset</h2>
    <form asp-action="MatchingSkillset" method="post">
        <div class="form-group">
            <label for="SkillSet">Skillset</label>
            <input type="text" class="form-control" id="SkillSet" name="SkillSet" value="@Model.SkillSet" />
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    @if (Model.MatchingSkillset != null)
    {
        <h3>Results</h3>
        <div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Project Name</th>
                        <th>Technology Stack</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in @Model.MatchingSkillset)
                    {
                        <tr>
                            <td>@emp.Name</td>
                            <td>@emp.ProjectName</td>
                            <td>@emp.SkillSet</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>